{
  "name":        "higgycursor",
  "displayName": "Smart Multicursor",
  "description": "Yet another context enhanced multicursor",
  "version":     "0.0.1",
  "publisher":   "lilole",
  "license":     "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lilole/vscode-smartmulticursor"
  },
  "bugs": {
    "url": "https://github.com/lilole/vscode-smartmulticursor/issues"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.36.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "cursor",
    "multi-cursor",
    "multicursor"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "higgycursor.insertCursorBelow",
        "title":   "Insert smart cursor below"
      },
      {
        "command": "higgycursor.insertCursorAbove",
        "title":   "Insert smart cursor above"
      },
      {
        "command": "higgycursor.lastCursorLeft",
        "title":   "Move last inserted cursor left"
      },
      {
        "command": "higgycursor.lastCursorRight",
        "title":   "Move last inserted cursor right"
      }
    ],
    "keybindings": [
      {
        "command": "higgycursor.insertCursorBelow",
        "key":     "alt+down",
        "mac":     "alt+down",
        "linux":   "alt+down",
        "when":    "editorTextFocus"
      },
      {
        "command": "higgycursor.insertCursorAbove",
        "key":     "alt+up",
        "mac":     "alt+up",
        "linux":   "alt+up",
        "when":    "editorTextFocus"
      },
      {
        "command": "higgycursor.lastCursorLeft",
        "key":     "alt+left",
        "mac":     "alt+left",
        "linux":   "alt+left",
        "when":    "editorTextFocus"
      },
      {
        "command": "higgycursor.lastCursorRight",
        "key":     "alt+right",
        "mac":     "alt+right",
        "linux":   "alt+right",
        "when":    "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile":           "tsc -p ./",
    "watch":             "tsc -watch -p ./",
    "pretest":           "npm run compile",
    "test":              "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob":   "^7.1.1",
    "@types/mocha":  "^5.2.6",
    "@types/node":   "^10.12.21",
    "@types/vscode": "^1.36.0",
    "glob":          "^7.1.4",
    "mocha":         "^6.1.4",
    "typescript":    "^3.3.1",
    "tslint":        "^5.12.1",
    "vscode-test":   "^1.0.2"
  }
}
